-------------------------------------------------------------------------
INSTALL SCALA
-------------------------------------------------------------------------

https://www.scala-lang.org/download/

wget http://www.scala-lang.org/download/scala-2.13.1.tgz

tar -xzvf scala-2.13.1.tgz

sudo mkdir /usr/local/scala

sudo mv scala-2.13.1 /usr/local/scala


-------------------------------------------------------------------------
UPDATE bash.bashrc
-------------------------------------------------------------------------

sudo nano /etc/bash.bashrc

SCALA_HOME=/usr/local/scala/scala-2.13.1
export SCALA_HOME
PATH=$PATH:$SCALA_HOME:$SCALA_HOME/bin:$SCALA_HOME/lib
export PATH

source /etc/bash.bashrc


-------------------------------------------------------------------------
RUN scala 
-------------------------------------------------------------------------

scala


-------------------------------------------------------------------------
QUIT scala 
-------------------------------------------------------------------------

:q

-------------------------------------------------------------------------

